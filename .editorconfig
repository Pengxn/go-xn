# EditorConfig

# Top-most EditorConfig file
root = true

# General settings
[*]
charset = utf-8
indent_size = 4
end_of_line = lf
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

# Matches the exact files either package.json or *.yml
[{*.yml, package.json}]
indent_size = 2

# Command `go fmt` set indent-style to TAB
[*.go]
indent_style = tab

# Makefile indent TAB-style setting
[Makefile]
indent_style = tab
